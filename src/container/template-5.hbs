<header class="header">
  <div>
    {{> logo}}
  </div>
  <nav class="header_nav">
    <div class="header_nav_right">{{>nav list=header}}</div>
  </nav>
</header>

<main class="main">
  {{#with messages}}
  <div class="messages">
    <h1 class="messages_title">{{title}}</h1>
    <a href="#" class="massages_link">All messages</a>
    {{#each list}}
    <div class="msg">
      <strong class="msg_name">{{name}}</strong>
      <p class="msg_text">{{message}}</p>
      <span class="msg_day">{{day}}</span>
    </div>

    {{/each}}
  </div>
  {{/with}}
  {{#with form}}
  <form class="form">
    <h2 class="form_title">{{title}}</h2>
    <div class="form_input_list">
      {{#each inputs}}
      <input class="form_input" type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form_input-{{id}}" />
      {{/each}}
    </div>
    <div class="form_checkbox_block">
      <input type="checkbox" name="{{checkbox.name}}">
      <label>{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}



</main>


<div class="advantages">
  {{#each advantages}}
  <div>
    <strong>{{title}}</strong>
    <p>{{text}}</p>
  </div>
  {{/each}}
</div>




