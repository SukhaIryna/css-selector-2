<header class="header">
  <div>
    {{> logo}}
  </div>
  <nav class="header_nav">
    <div class="header_nav_right">{{>nav list=header}}</div>
  </nav>
</header>


<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <div class="info_description">{{description}}</div>
  </div>
  {{/with}}


  {{#with form}}
  <form class="form">

    <div class="form_input_list">
      {{#each inputs}}
      <input class="form_input" type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form_input-{{id}}" />
      {{/each}}
    </div>
    <div class="form_checkbox_block">
      <input type="checkbox" name="{{checkbox.name}}">
      <label>{{checkbox.label}}</label>
    </div>
    <button type="submit" class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}

</main>


{{#with updates}}
<div class="updates">
  <strong class="updates_title">{{title}}</strong>

  {{#each list}}
  <div class="list">
    <div class="card_photo" style="background-image: url(https://picsum.photos/34/34)"></div>
    <div class="list_body">
      <h2 class="list_title">{{nickname}}</h2>
      <p class="list_description">{{description}}</p>
    </div>
  </div>
  {{/each}}
  {{#with show_all}}
  <a class="updates_link" href="{{url}}">{{text}}</a>
  {{/with}}

</div>
{{/with}}


{{#with expirience}}
<div class="badge_position">
  <div class="card_badge">{{badge}}</div>
</div>
<div class="card">
  <h2 class="card_title">{{title}}</h2>

  <div class="card_list">

    {{#each list}}
    <div class="card_block">
      <h6 class="card_name">{{name}}</h6>
      <p class="card_details">{{details}}</p>
    </div>
    {{/each}}

  </div>
</div>
{{/with}}









<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>